<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#B8B6B8</item>
    </style>

    <style name="btnCancerNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_cancer_selector</item>
    </style>

    <style name="btnOkNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/btn_ok_selector</item>
    </style>

    <style name="setupTitleStyle" parent="@style/titleBarStyle">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="titleBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/title_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="setupTextItemStyle" parent="setupTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:drawableLeft">@drawable/dialog_title_default_icon</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="setupBtnNextStyle" parent="btnOkNormal">
        <item name="android:drawableRight">@drawable/next</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:onClick">clickNext</item>
    </style>

    <style name="setupBtnPreStyle" parent="btnOkNormal">
        <item name="android:drawableLeft">@drawable/pre</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:onClick">clickPre</item>
    </style>


</resources>
