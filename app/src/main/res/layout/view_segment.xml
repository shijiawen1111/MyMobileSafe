<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/segment_tv_left"
        android:layout_width="@dimen/width_90dp"
        android:layout_height="@dimen/height_36dp"
        android:background="@drawable/segment_left_selector"
        android:clickable="true"
        android:gravity="center"
        android:text="未加锁"
        android:textColor="@color/segment_textcolor" />

    <TextView
        android:id="@+id/segment_tv_right"
        android:layout_width="@dimen/width_90dp"
        android:layout_height="@dimen/height_36dp"
        android:background="@drawable/segment_right_selector"
        android:clickable="true"
        android:gravity="center"
        android:text="已加锁"
        android:textColor="@color/segment_textcolor" />
</LinearLayout>