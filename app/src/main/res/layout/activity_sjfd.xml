<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/titleBarStyle"
        android:text="手机防盗" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            style="@style/textNormal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="安全号码:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/sjfd_tv_number"
            style="@style/textNormal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:text="xxxx"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#33000000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sjfd_rl_protecting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/click_item_selector">

        <TextView
            style="@style/textNormal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="防盗保护是否开启:"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/sjfd_iv_protecting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/unlock" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#33000000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sjfd_rl_setup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/click_item_selector">

        <TextView
            style="@style/textNormal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="重新进入设置向导:"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#33000000" />
    </RelativeLayout>

    <TextView
        style="@style/textNormal"
        android:layout_width="match_parent"
        android:background="#88000000"
        android:padding="8dp"
        android:text="功能简介"
        android:textColor="#ffffff" />

    <TextView
        style="@style/setupTextItemStyle"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:text="GPS追踪:#*location*#" />

    <TextView
        style="@style/setupTextItemStyle"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:text="远程销毁数据:#*wipedata*#" />

    <TextView
        style="@style/setupTextItemStyle"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:text="防盗报警音乐:#*alarm*#" />

    <TextView
        style="@style/setupTextItemStyle"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:text="远程锁屏:#*lockscreen*#" />
</LinearLayout>